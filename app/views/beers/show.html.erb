<p id="notice"><%= notice %></p>

<h1>
  <%= @beer.name %>
</h1>
<div class="info">
  <h2>
    Style: <%= @beer.style %>
  </h2>

  <h2>
    Brewery: <%= link_to @beer.brewery.name, @beer.brewery %>
  </h2>
</div>

<% if @beer.ratings.count >0%>
<h1>Ratings</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Score</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @beer.ratings.each do |rating| %>
    <tr>
      <td><%= link_to rating.user.username, user_path(rating.user.id)%></td>
      <td><%= rating.score %></td>
      <td><%= rating.created_at.year%> - <%=rating.created_at.month%> - <%=rating.created_at.day%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if current_user%>
<div class="to_button">
  <%= link_to "Add Rating", new_rating_path%>
</div>
<% end %>
