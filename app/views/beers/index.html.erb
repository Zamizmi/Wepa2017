<p id="notice"><%= notice %></p>

<h1>Beers</h1>
<h2>Number of Beers: <%=@beers.count%></h2>
<body>
  <% unless @beers.nil?%>
  <div class="tables">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Brewery</th>
          <th>Average Rating</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name.capitalize, beer %></td>
          <td><%= beer.AverageRating%></td>
          <td><%= link_to beer.brewery.name.capitalize, brewery_path(beer.brewery_id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>


  <% end %>

  <br>
  <div class="btn btn-default">
    <% if current_user%>
    <%= link_to 'Create Beer', new_beer_path%>
    <% else %>
    <h2>Sign in to add Beers!</h2>
    <br>
    <%= link_to 'Sign in', signin_path%>
    <% end %>
  </div>
