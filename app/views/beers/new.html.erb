<h1>New Beer</h1>

<%= form_for(@beer) do |f| %>
<% if @beer.errors.any?%>
<div id="error_explanation">
  <h2><%=pluralize(@beer.errors.count, "error") %> prohibited rating from being saved: </h2>
  <ul>
    <% @beer.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
  Name: <%=f.text_field :name%>
  Brewery: <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :to_s)%>
  Style: <%= f.select :style, options_for_select(@styles, :style)%>

  <%= f.submit%>
<% end %>

<div class="to_button">
  <%= link_to 'Back', beers_path %>
</div>
