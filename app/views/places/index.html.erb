<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  City<br><br>
  <%= text_field_tag :city, params[:city] %>
  <br><br>
  <%= submit_tag "Search" %><br>
<% end %>
<br>

<% if @places %>
  <table>
    <thead>
      <% Place.rendered_fields.each do |f| %>
        <td><%=f.capitalize %></td>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <% Place.rendered_fields.each do |f| %>
          <td><%= place.send(f) %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>
