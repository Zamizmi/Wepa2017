<p id="notice"><%= notice %></p>

<h1>Breweries</h1>
<h2> Number of Breweries: <%= @breweries.count %> </h2>

<% unless @breweries.nil?%>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
    <tr>
      <td><%= link_to brewery.name.capitalize, brewery%></td>
      <td><%= brewery.year %></td>
      <% if current_user%>
      <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
      <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<div class="btn btn-default">
  <% if current_user%>
  <%= link_to 'Create Brewery', new_brewery_path%>
  <% else %>
  <h2>Sign in to add Breweries!</h2>
  <br>
  <%= link_to 'Sign in', signin_path%>
  <% end %>
</div>
