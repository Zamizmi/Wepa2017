<p id="notice"><%= notice %></p>

<h1>Breweries</h1>
<h2> Number of Breweries: <%= @breweries.count %> </h2>

<% unless @breweries.nil?%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
    <tr>
      <td><%= link_to brewery.name.capitalize, brewery%></td>
      <td><%= brewery.year %></td>
      <% if current_user%>
      <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
      <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<div class="to_button">
  <%= link_to 'New Brewery', new_brewery_path %>
</div>
