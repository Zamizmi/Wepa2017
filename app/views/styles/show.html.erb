<p id="notice"><%= notice %></p>


<h1><%= @style.name %></h1>

<h2>
  <%= @style.description %>
</h2>
<body>
  <% unless @beers.nil?%>
  <h2>Beers</h2>
  <div class="tables">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Style</th>
          <th>Brewery</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name.capitalize, beer %></td>
          <td><%= beer.style.name.capitalize %></td>
          <td><%= link_to beer.brewery.name.capitalize, brewery_path(beer.brewery_id) %></td>
          <% if current_user%>
          <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
          <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
  <div class="to_button">
    <%= link_to 'Back', styles_path %>
  </div>
</body>
