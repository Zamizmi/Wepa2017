<p id="notice"><%= notice %></p>

<h1>Listing Styles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td><%= style.description.split[0...5].join(' ') %>... <%=link_to 'Show more', style%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="to_button">
<%= link_to 'New Style', new_style_path %>
</div>
