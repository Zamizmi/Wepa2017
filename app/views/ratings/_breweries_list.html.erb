<table class="table table-hover">
  <thead>
    <tr>
      <th>Average Score</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
    <tr>
      <td><%= link_to brewery.name, brewery %></td>
      <td><%= brewery.AverageRating%></td>
    </tr>
    <% end %>
  </tbody>
</table>
