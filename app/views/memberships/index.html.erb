<p id="notice"><%= notice %></p>

<h1>Memberships</h1>

<% if @memberships.count > 0%>
<table>
  <thead>
    <tr>
      <th>Beer club</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
    <tr>
      <td><%= link_to membership.beer_club.name, membership.beer_club %></td>
      <td><%= link_to membership.user.username, membership.user %></td>
      <% if membership.user = current_user%>
      <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
      <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
