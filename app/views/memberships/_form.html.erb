<%= form_for(@membership) do |f| %>
<% if @membership.errors.any?%>
<div id="error_explanation">
  <h2><%=pluralize(@membership.errors.count, "error") %> prohibited joining: </h2>
  <ul>
    <% @membership.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% if current_user%>
<div class="field">
  <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :name)%>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
<% end %>
