<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul class="navibar", id="Topnav">
    <li><%= link_to 'Breweries', breweries_path %></li>
    <li><%= link_to 'Beers', beers_path %></li>
    <li><%= link_to "Ratings", ratings_path%></li>
    <li><%= link_to "Users", users_path%></li>
    <!-- TODO <button type="button"><%= link_to "Ratings", ratings_path%></button>
    TODO <button type="button"><%= link_to "Ratings", ratings_path%></button> -->
  </ul>
  <ul class="navibar", id="Topnav">
    <% if current_user%>
    <li><%= link_to current_user.username, user_path(current_user)%> </li>
    <li><%= link_to 'Rate a beer', new_rating_path%></li>
    <li><%= link_to 'Sign out', signout_path%></li>
    <% else %>
    <li> <%= link_to 'Sign in', signin_path%></li>
    <li> <%= link_to 'Sign up', signup_path%></li>
    <% end %>
  </ul>


  <% if current_user %>
    <p> Signed in as <%=current_user.username %></p>
  <%end%>

<%= yield %>

</body>
</html>
