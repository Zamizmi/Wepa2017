<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul class="navibar">
    <li><%= link_to 'Breweries', breweries_path %></li>
    <li><%= link_to 'Beers', beers_path %></li>
    <li><%= link_to "Ratings", ratings_path%></li>
    <li><%= link_to "Users", users_path%></li>
    <li><%= link_to "Beer Clubs", beer_clubs_path%></li>
    <li><%= link_to "Search places", places_path%></li>
  </ul>
  <ul class="navibar">
    <% if current_user%>
    <li><%= link_to current_user.username.capitalize, user_path(current_user)%> </li>
    <li><%= link_to 'Rate a beer', new_rating_path%></li>
    <% unless current_user.memberships.count >= BeerClub.count%>
      <li><%= link_to 'Join a club', new_membership_path%></li>
    <% end %>
    <li><%= link_to 'Sign out', signout_path%></li>
    <% else %>
    <li> <%= link_to 'Sign in', signin_path%></li>
    <li> <%= link_to 'Sign up', signup_path%></li>
    <% end %>
  </ul>

  <% if current_user %>
  <h3> Signed in as <%=current_user.username.capitalize %></h3>
  <%end%>

  <%= yield %>

</body>
</html>
